# Google Maps API Configuration
# Required: Google Maps API key for traffic data retrieval
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# OpenAI API Configuration  
# Required: OpenAI API key for message generation
OPENAI_API_KEY=your_openai_api_key_here

# SendGrid API Configuration
# Required: SendGrid API key for email notifications
SENDGRID_API_KEY=your_sendgrid_api_key_here

# Application Configuration
# Optional: Minimum delay in minutes to trigger notifications (default: 30)
DELAY_THRESHOLD_MINUTES=30

# Optional: Node.js environment (development, production, test) (default: development)
NODE_ENV=development

# Optional: Maximum number of retry attempts for failed activities (default: 3)
MAX_RETRY_ATTEMPTS=3

# Optional: Timeout for individual activities in seconds (default: 60)
ACTIVITY_TIMEOUT_SECONDS=60

# Optional: Timeout for entire workflow execution in seconds (default: 300)
WORKFLOW_TIMEOUT_SECONDS=300

# Optional: Enable debug logging for troubleshooting (default: false)
DEBUG_LOGGING=false

# Temporal Configuration
# Optional: Temporal server address and port (default: localhost:7233)
TEMPORAL_SERVER_URL=localhost:7233

# Optional: Temporal namespace for workflow isolation (default: default)
TEMPORAL_NAMESPACE=default

# Optional: Task queue name for worker registration (default: freight-delay-monitor)
TEMPORAL_TASK_QUEUE=freight-delay-monitor

# Optional: Connection timeout in milliseconds (default: 10000)
TEMPORAL_CONNECTION_TIMEOUT_MS=10000

# Optional: Maximum concurrent activity task executions (default: 10)
TEMPORAL_MAX_CONCURRENT_ACTIVITIES=10

# Optional: Maximum concurrent workflow task executions (default: 5)
TEMPORAL_MAX_CONCURRENT_WORKFLOWS=5